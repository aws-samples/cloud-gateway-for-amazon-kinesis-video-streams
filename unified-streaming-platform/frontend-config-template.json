{
  "aws": {
    "region": "us-east-1",
    "accountId": "{{ REPLACE_WITH_CDK_OUTPUT_AWSAccountId }}"
  },
  "cognito": {
    "userPoolId": "{{ REPLACE_WITH_CDK_OUTPUT_CognitoUserPoolId }}",
    "userPoolWebClientId": "{{ REPLACE_WITH_CDK_OUTPUT_CognitoUserPoolWebClientId }}",
    "userPoolNativeClientId": "{{ REPLACE_WITH_CDK_OUTPUT_CognitoUserPoolNativeClientId }}",
    "region": "{{ REPLACE_WITH_CDK_OUTPUT_CognitoRegion }}"
  },
  "api": {
    "baseUrl": "{{ REPLACE_WITH_CDK_OUTPUT_UnifiedApiEndpoint }}",
    "gatewayId": "{{ REPLACE_WITH_CDK_OUTPUT_ApiGatewayId }}",
    "stage": "{{ REPLACE_WITH_CDK_OUTPUT_ApiGatewayStage }}",
    "endpoints": {
      "pipelineGeneration": "/v1/generate-pipeline",
      "rtspCharacteristics": "/v1/characteristics",
      "gstreamerTools": {
        "searchElements": "/v1/tools/search-elements",
        "troubleshoot": "/v1/tools/troubleshoot",
        "optimize": "/v1/tools/optimize",
        "validate": "/v1/tools/validate",
        "expert": "/v1/tools/expert"
      },
      "cameraManagement": {
        "list": "/cameras",
        "create": "/cameras",
        "get": "/cameras/{id}",
        "update": "/cameras/{id}",
        "delete": "/cameras/{id}"
      }
    }
  },
  "backend": {
    "knowledgeBaseId": "{{ REPLACE_WITH_CDK_OUTPUT_KnowledgeBaseId }}",
    "claudeModel": "{{ REPLACE_WITH_CDK_OUTPUT_ClaudeModel }}",
    "enhancedLambdaFunction": "{{ REPLACE_WITH_CDK_OUTPUT_EnhancedLambdaFunctionName }}",
    "cameraLambdaFunction": "{{ REPLACE_WITH_CDK_OUTPUT_CameraLambdaFunctionName }}",
    "camerasTable": "{{ REPLACE_WITH_CDK_OUTPUT_CamerasTableName }}"
  },
  "rtspTestServer": {
    "enabled": true,
    "cluster": "{{ REPLACE_WITH_CDK_OUTPUT_RTSPTestServerCluster }}",
    "service": "{{ REPLACE_WITH_CDK_OUTPUT_RTSPTestServerService }}",
    "ports": {
      "rtsp": 8554,
      "http": 8080,
      "https": 8443,
      "admin": 8888
    },
    "testStreams": [
      "rtsp://{{ REPLACE_WITH_RTSP_SERVER_PUBLIC_IP }}:8554/h264_720p_25fps",
      "rtsp://{{ REPLACE_WITH_RTSP_SERVER_PUBLIC_IP }}:8554/h264_360p_15fps_aac",
      "rtsp://{{ REPLACE_WITH_RTSP_SERVER_PUBLIC_IP }}:8554/h265_720p_25fps",
      "rtsp://{{ REPLACE_WITH_RTSP_SERVER_PUBLIC_IP }}:8554/h265_360p_15fps_aac"
    ]
  },
  "authentication": {
    "tokenType": "idToken",
    "authFlow": "ADMIN_NO_SRP_AUTH",
    "usernameFormat": "email"
  },
  "_instructions": {
    "description": "This is a template file. After CDK deployment, replace all {{ REPLACE_WITH_CDK_OUTPUT_* }} placeholders with actual values from CDK outputs.",
    "howToUse": [
      "1. Deploy the CDK stack: ./deploy.sh",
      "2. Get CDK outputs: aws cloudformation describe-stacks --stack-name UnifiedStreamingPlatformStack --profile malone-aws --query 'Stacks[0].Outputs'",
      "3. Replace all {{ REPLACE_WITH_CDK_OUTPUT_* }} placeholders with corresponding OutputValue from CDK",
      "4. For RTSP server IP, check ECS service public IP in AWS Console",
      "5. Save as frontend-config.json for use by frontend applications"
    ],
    "note": "The Cognito User Pool and clients are now created by the CDK stack, not imported from existing resources"
  }
}
